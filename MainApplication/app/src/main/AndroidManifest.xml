<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.developer" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LauncherActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".develop.apiguides.appcomponents.activities.activities.MainActivitySample"
            android:label="@string/title_activity_main_activity_sample" >
        </activity>
        <activity
            android:name=".develop.apiguides.appcomponents.activities.fragments.MainFragmentsSample"
            android:label="@string/title_activity_main_fragments_sample" >
        </activity>
        <activity
            android:name=".develop.apiguides.appcomponents.activities.loader.MainLoaderSample"
            android:label="@string/title_activity_main_loader_sample" >
        </activity>
        <activity
            android:name=".develop.apiguides.appcomponents.activities.overviewscreen.MainOverviewScreenSample"
            android:label="@string/title_activity_main_overview_screen_sample" >
        </activity>
    </application>

</manifest>
